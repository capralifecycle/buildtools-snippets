FROM azul/zulu-openjdk-alpine:11@sha256:e714f3430d551ad588441ac10d827dc44dbb23e593e68cbd6c0e2fb178a19e3e
ARG BRANCH
ENV MAVEN_HOME /usr/share/maven
ENV MAVEN_CONFIG "/home/jenkins/.m2"
