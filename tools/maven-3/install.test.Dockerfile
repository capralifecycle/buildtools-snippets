FROM azul/zulu-openjdk-alpine:11@sha256:67871dbd6505dd88d45b99f467801a06e3c08b5c83e99058348a9b600b9720cf
ARG BRANCH
ENV MAVEN_HOME /usr/share/maven
ENV MAVEN_CONFIG "/home/jenkins/.m2"
