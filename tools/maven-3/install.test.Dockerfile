FROM azul/zulu-openjdk-alpine:11@sha256:83503c0810040c2bd87e4e9b8e28f85d0d0ce525864ba55de5230d4f5abd793f
ARG BRANCH
ENV MAVEN_HOME /usr/share/maven
ENV MAVEN_CONFIG "/home/jenkins/.m2"
